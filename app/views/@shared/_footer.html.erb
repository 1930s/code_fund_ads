<footer>
  <!-- Lists -->
  <div class="container u-space-2">
    <div class="row justify-content-md-between">
      <div class="col-sm-4 col-lg-2 mb-4 mb-lg-0">
        <h3 class="h6">
          <strong>About</strong>
        </h3>

        <!-- List -->
        <ul class="list-unstyled mb-0">
          <li><%= link_to "Advertise with Us", "#", class: "u-list__link" %></li>
          <li><%= link_to "Become a Publisher", "#", class: "u-list__link" %></li>
        </ul>
        <!-- End List -->
      </div>

      <div class="col-sm-4 col-lg-2 mb-4 mb-lg-0">
        <h3 class="h6">
          <strong>Company</strong>
        </h3>

        <!-- List -->
        <ul class="list-unstyled mb-0">
          <li><%= link_to "Team", "#", class: "u-list__link" %></li>
          <li><a href="https://medium.com" target="_blank" class="u-list__link">Blog</a></li>
        </ul>
        <!-- End List -->
      </div>

      <div class="col-sm-4 col-lg-2 mb-4 mb-lg-0">
        <h3 class="h6">
          <strong>Resources</strong>
        </h3>

        <!-- List -->
        <ul class="list-unstyled mb-0">
          <li><%= link_to "Help", "#", class: "u-list__link" %></li>
          <li><a href="https://status.codefund.io" class="u-list__link">Status</a></li>
          <li><a href="https://www.iubenda.com/privacy-policy/47597768" class="u-list__link iubenda-nostyle no-brand iubenda-embed iub-legal-only" title="Privacy Policy">Privacy Policy</a></li>
          <li><a href="https://www.iubenda.com/privacy-policy/47597768/cookie-policy" class="u-list__link iubenda-nostyle no-brand iubenda-embed" title="Cookie Policy">Cookie Policy</a></li>
        </ul>
        <!-- End List -->
      </div>

      <div class="col-md-7 col-lg-5 mb-4 mb-md-0">
        <div class="mb-4">
          <h3 class="h6">
            <strong>Get our weekly newsletter!</strong>
          </h3>
          <p class="font-size-14">Get weekly updates on our progress. Never spam.</p>
        </div>

        <!-- Form -->
        <%= form_tag "#", method: :post, class: "js-validate js-form-message", data: {
          controller: "event_track",
          action: "submit->event_track#logEvent",
          ga_event_category: "website",
          ga_event_action: "subscribe",
          ga_event_label: "newsletter",
          ga_event_value: ""
        } do %>
          <div class="js-focus-state input-group u-form">
            <input type="email" class="form-control u-form__input" name="email" required
                  placeholder="Enter your email address"
                  aria-label="Enter your email address">
            <span class="input-group-append u-form__append">
              <button type="submit" class="btn btn-primary u-btn-primary">Subscribe</button>
            </span>
          </div>
        <% end %>
        <!-- End Form -->
      </div>
    </div>
  </div>
  <!-- End Lists -->

  <hr>

  <!-- Copyright -->
  <div class="container text-center u-space-1">
    <!-- Logo -->
    <a class="d-inline-block mb-2" href="/" aria-label="CodeFund">
      <%= image_tag "codefund-logo.svg", alt: "CodeFund", style: "width: 30px;" %>
    </a>
    <!-- End Logo -->

    <p class="small text-muted">
      &copy; 2018 &copy; CodeFund. All rights reserved.<br/>
      <small><a href="https://themes.getbootstrap.com/product/front-multipurpose-responsive-template/" target="_blank">Front Theme</a> 2018 &copy; Htmlstream. All rights reserved.</small>
      <br>
      <small><a href="https://undraw.co/" target="_blank">Illustrations</a> created by <a href="https://twitter.com/ninalimpi">Katerina Limpitsoun</a>.</small>
    </p>
  </div>
  <!-- End Copyright -->
</footer>

