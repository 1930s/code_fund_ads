<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/email_templates" %>
  <%= render "/@shared/breadcrumbs/add_email_template", class: "active" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Adding", "Email Template",
    subtitle: "Fill out the form below",
    icon: "fas fa-envelope" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/email_templates/form", email_template: @email_template %>
  </div>
</main>