<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/email_templates", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_email_template" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Email Templates",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "fas fa-envelope" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <div class="bg-white p-4">
      <%= render "/email_templates/table", email_templates: @email_templates, pagy: @pagy %>
    </div>
  </div>
</main>