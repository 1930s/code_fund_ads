<%= simple_form_for email_template, html: { class: "js-validate", id: "email-template-form" }, wrapper: :front_form do |f| %>
  <%= render "/@shared/forms/error_messages", object: email_template %>
  <div class="row">
    <div class="col-md-8">
      <%= tag.div f.input(:title, as: :string, required: true, input_html: {
          class: "form-control",
          data: {
            msg: "Please enter a valid title",
            error_class: "u-has-error",
            success_class: "u-has-success"
          }
        }), class: "col-12 mb-3" %>

      <%= tag.div f.input(:subject, as: :string, required: true, input_html: {
          class: "form-control",
          data: {
            msg: "Please enter a valid subject",
            error_class: "u-has-error",
            success_class: "u-has-success"
          }
        }), class: "col-12 mb-3" %>

      <%= tag.div f.input(:body, label: "Body", as: :text, required: true, input_html: {
          class: "form-control",
          rows: 10,
          data: {
            controller: "rich-text-editor",
            msg: "Please enter a valid subject",
            error_class: "u-has-error",
            success_class: "u-has-success"
          }
        }), class: "col-12 mb-3" %>
      </div>
      
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Applicant Variables</h5>
            <h6 class="card-subtitle mb-2 text-muted">for liquid template</h6>
            <p class="card-text">
              <ul>
                <li>first_name</li>
                <li>last_name</li>
                <li>email</li>
                <li>url</li>
                <li>monthly_visitors</li>
                <li>company_name</li>
                <li>monthly_budget</li>
              </ul>
              To use a variable in the subject or body, wrap the variable with <code>{{</code> and <code>}}</code>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%= render "@shared/forms/button_panel" do %>
      <%= f.submit "Save Email Template", class: "btn btn-sm btn-primary transition-3d-hover mr-1" %>
      <%= link_to "Cancel", email_templates_path, class: "btn btn-sm btn-soft-secondary transition-3d-hover" %>
    <% end %>
  </div>
<% end %>
