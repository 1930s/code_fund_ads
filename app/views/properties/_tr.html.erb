<%= tag.tr class: classes("even": property_counter.even?, "odd": property_counter.odd?, "opacity-40": %w[archived blacklisted rejected].any?(ENUMS::PROPERTY_STATUSES[property.status])) do %>
  <td><%= property_status_html property.status %></span></td>
  <td><%= link_to property.user.full_name, user_path(property.user), title: "View User", data: tooltip_expando %></td>
  <td><%= link_to property.name, property_path(property), title: "View Property", data: tooltip_expando %></td>
  <td><%= ENUMS::PROPERTY_TYPES[property.property_type] %></td>
  <td><%= link_to property.template&.name, property.template ? template_path(property.template) : "#", title: "View Template", data: tooltip_expando %></td>
  <td><%= link_to "Edit", edit_property_path(property), class: "btn btn-link btn-sm", title: "Edit Property", data: tooltip_expando %></td>
<% end %>
