<div class="table-responsive">
  <table class="table table-borderless u-datatable u-datatable__striped">
    <thead>
      <tr class="border-bottom">
        <%= sortable_tr "name" %>
        <th scope="col">Publisher</th>
        <th scope="col">URL</th>
        <%= sortable_tr "created_at", "Date Added" %>
        <%= sortable_tr "status" %>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="font-size-1">
      <%= render partial: "/properties/tr", collection: @properties, as: :property %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
    <%== pagy_nav_bootstrap(@pagy) if @pagy.pages > 1 %>
    <%= pagy_entries(@pagy) %>
  </div>
</div>
