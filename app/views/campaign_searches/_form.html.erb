<%= simple_form_for @campaign_search, defaults: { input_html: { class: "form-control-sm" }}  do |f| %>
  <div class="row mt-5">
    <%= tag.div f.input(:name, required: false), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:user, required: false, label: "Advertiser"), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:statuses, collection: ENUMS::CAMPAIGN_STATUSES.values.zip(ENUMS::CAMPAIGN_STATUSES.keys), required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>

    <%= pseudo_row_divider %>

    <div class="col-12 mt-3 mt-md-1">
      <%= f.button :submit, value: "Search", class: "btn-md btn-default mr-3" %>
      <%= link_to "Clear", campaign_search_path(@campaign_search.to_gid_param), class: "btn-md btn-link text-danger", method: :delete if @campaign_search.present? %>
    </div>
  </div>
<% end %>
