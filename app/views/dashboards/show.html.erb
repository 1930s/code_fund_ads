<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= form_tag dashboard_path(@context),
        data: { controller: "dashboard-date-range", target: "dashboard-date-range.form" },
        method: :get, autocomplete: "off",
        style: "width: 250px;" do%>
    <div class="w-auto input-group input-group-sm">
      <div class="input-group-prepend">
        <span class="input-group-text">
          <span class="fas fa-calendar"></span>
        </span>
      </div>
      <input type="text"
        name="date_range"
        class="js-range-datepicker form-control bg-white rounded-right"
        data-target="dashboard-date-range.datePicker"
        data-start-date="<%= @start_date.to_s("mm/dd/yyyy") %>"
        data-end-date="<%= @end_date.to_s("mm/dd/yyyy") %>" />
    </div>
  <% end %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading @context.humanize, "Dashboard",
    subtitle: "Overall view of your account",
    icon: "fas fa-tachometer" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/dashboards/#{@context}" %>
  </div>
</main>