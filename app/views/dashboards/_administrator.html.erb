<div class="text-center mb-3 mt-5">
  <span class="u-divider u-divider--xs u-divider--text">Active Advertisers</span>
</div>

<div class="mb-7" id="dashboard-advertiser-cards">
  <div class="card-deck d-block d-lg-flex card-lg-gutters-2">
    <% @active_advertisers.each.with_index do |advertiser, index| %>
      <div class="card card-frame mb-3">
        <%= link_to user_path(advertiser), class: "card-body p-4" do %>
          <div class="media align-items-center">
            <div class="u-avatar mr-3">
              <%= user_avatar_image_tag(advertiser, "img-fluid rounded-circle") %>
            </div>
            <div class="media-body">
              <span class="text-dark"><%= advertiser.company_name %></span>
              <small class="d-block text-secondary"><%= advertiser.name %></small>
            </div>
            <div class="media-body text-right">
              <span class="text-primary ml-3">
                TBD <%# TODO: Nate - Total ad spend for date range (start_date to end_date) %>
              </span>
              <small class="d-block text-secondary">
                TBD <%# TODO: Nate - Average CTR for date range (start_date to end_date) %>
              </small>
            </div>
          </div>
        <% end %>
      </div>
      <% if (index + 1) % 3 == 0 %>
        </div><div class="card-deck d-block d-lg-flex card-lg-gutters-2">
      <% end %>
    <% end %>
  </div>
</div>
