  <%= render "/dashboards/stat_card",
    label: "Clicks",
    value: "TBD", # TODO: Nate - Total clicks for date range (start_date to end_date)
    icon: "fas fa-bullseye-pointer",
    color: "btn-soft-primary" %>
  <%= render "/dashboards/stat_card",
    label: "CTR",
    value: "TBD", # TODO: Nate - Average CTR for date range (start_date to end_date)
    icon: "fas fa-percentage",
    color: "btn-soft-warning" %>
</div>
<div class="card-deck d-block d-lg-flex card-lg-gutters-2 mb-6">
  <%= render "/dashboards/stat_card",
    label: "Revenue",
    value: "TBD", # TODO: Nate - Total gross revenue for date range (start_date to end_date)
    icon: "fas fa-donate",
    color: "btn-soft-success" %>
  <%= render "/dashboards/stat_card",
    label: "Distributions",
