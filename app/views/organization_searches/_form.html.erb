<%= simple_form_for @organization_search, wrapper: :filter_form do |f| %>
  <%= f.input(:name, required: false) %>

  <div class="text-right">
    <%= f.button :submit, value: "Apply Filters", class: "btn btn-sm btn-primary" %>
    <%= link_to "Clear", organization_search_path(@organization_search.to_gid_param), class: "btn-sm btn-link text-danger ml-3", method: :delete %>
  </div>
<% end %>