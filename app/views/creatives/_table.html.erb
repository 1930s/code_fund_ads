<table class="table table-borderless u-datatable u-datatable__striped mt-5">
  <thead>
    <tr class="border-bottom">
      <th scope="col">Name</th>
      <th scope="col">Advertiser</th>
      <th scope="col">Headline</th>
      <th scope="col">Campaigns</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "/creatives/tr", collection: @creatives, as: :creative %>
  </tbody>
  <tfoot>
    <tr class="border-top">
      <td colspan="10" class="pt-3">
        <%= link_to "Previous", creatives_path(page: @pagy.prev), class: "btn btn-lg btn-link text-secondary" if @pagy.prev %>
        <%= link_to "Next", creatives_path(page: @pagy.next), class: "btn btn-lg btn-link text-secondary float-right" if @pagy.next %>
      </td>
    </tr>
  </tfoot>
</table>
