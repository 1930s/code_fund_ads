<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/creatives", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_creative" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Creatives",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "pen-nib" %>
<% end %>

<main id="content" role="main">
  <div class="u-bg-light-blue-50">
    <div class="container u-space-1">
      <p id="notice"><%= notice %></p>
      <%#= render "/creative_searches/form" %>
      <div class="bg-white p-4">
        <%= render "/creatives/table", creatives: @creatives %>
      </div>
    </div>
  </div>
</main>