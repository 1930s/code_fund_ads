<table class="table table-borderless u-datatable u-datatable__striped mt-5">
  <thead>
    <tr class="border-bottom">
      <th scope="col" style="width: 30px;">&nbsp;</th>
      <th scope="col">Name</th>
      <th scope="col">Advertiser</th>
      <th scope="col">Expires</th>
      <th scope="col">Spend</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "/campaigns/tr", collection: @campaigns, as: :campaign %>
  </tbody>
  <tfoot>
    <tr class="border-top">
      <td colspan="6" class="pt-3">
        <%= link_to "Previous", campaigns_path(page: @pagy.prev), class: "btn btn-lg btn-link text-secondary" if @pagy.prev %>
        <%= link_to "Next", campaigns_path(page: @pagy.next), class: "btn btn-lg btn-link text-secondary float-right" if @pagy.next %>
      </td>
    </tr>
  </tfoot>
</table>
