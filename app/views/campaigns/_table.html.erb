<table class="table table-borderless u-datatable u-datatable__striped mt-5">
  <thead>
    <tr class="border-bottom">
      <th scope="col">Status</th>
      <th scope="col">Advertiser</th>
      <th scope="col">Name</th>
      <th scope="col">Creative</th>
      <th scope="col">Dates</th>
      <th scope="col">US Hours</th>
      <th scope="col">Budget</th>
      <th scope="col">Spend</th>
      <th scope="col">Impressions</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "/campaigns/tr", collection: @campaigns, as: :campaign %>
  </tbody>
  <tfoot>
    <tr class="border-top">
      <td colspan="10">
        <%= link_to 'New Campaign', new_campaign_path, class: "btn btn-primary" %>

        <div class="float-right">
          <%= link_to "Previous", campaigns_path(page: @pagy.prev), class: "btn btn-link" if @pagy.prev %>
          <%= link_to "Next", campaigns_path(page: @pagy.next), class: "btn btn-link" if @pagy.next %>
        </div>
      </td>
    </tr>
  </tfoot>
</table>
