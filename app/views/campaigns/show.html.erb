<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/campaigns" %>
  <%= render "/@shared/breadcrumbs/campaign", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/edit_campaign", campaign: @campaign %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Campaign", subtitle: @campaign.name, icon: "ad" %>
<% end %>

<div class="container mt-3">
  <p id="notice"><%= notice %></p>
</div>
