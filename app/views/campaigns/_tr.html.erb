<tr>
  <td><%= tag.span campaign.status, class: "badge #{classes("badge-warning": campaign.pending?, "badge-success": campaign.active?, "badge-light": campaign.archived? )}" %></span></td>
  <td><%= campaign.user&.full_name %></td>
  <td><%= campaign.name %></td>
  <td>US Hours</td>
  <td><%= campaign.creative&.name %></td>
  <td>Dates</td>
  <td>Budget</td>
  <td>Spend</td>
  <td>Impressions</td>
  <td><%= link_to "Edit", edit_campaign_path(campaign), class: "btn btn-link btn-sm" %></td>
</tr>
