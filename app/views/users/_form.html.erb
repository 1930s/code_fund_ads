<%= simple_form_for user do |f| %>
  <div class="row">
    <% #################################################################################################### %>
    <%= render "@shared/forms/section_heading", text: "Personal" %>

    <%= tag.div f.input(:first_name), class: "col-12 col-md-6" %>
    <%= tag.div f.input(:last_name), class: "col-12 col-md-6" %>

    <%= pseudo_row_divider %>

    <%= tag.div f.input(:email), class: "col-12 col-md-6" %>
    <%= tag.div class: "col-12 col-md-6" %>

    <% #################################################################################################### %>
    <%= render "@shared/forms/section_heading", text: "Business" %>

    <%= tag.div f.input(:company), class: "col-12 col-md-6" %>
    <%= tag.div f.input(:paypal_email), class: "col-12 col-md-6" %>

    <%= pseudo_row_divider %>

    <%= tag.div f.input(:address_1), class: "col-12 col-md-6" %>
    <%= tag.div f.input(:address_2), class: "col-12 col-md-6" %>

    <%= pseudo_row_divider %>

    <%= tag.div f.input(:city), class: "col-12 col-md-6" %>
    <%= tag.div f.input(:region, label: "State / Region"), class: "col-12 col-md-6" %>

    <%= pseudo_row_divider %>

    <%= tag.div f.input(:postal_code), class: "col-12 col-md-6" %>
    <%= tag.div f.input(:country, input_html: { data: { controller: "select" }}), class: "col-12 col-md-6" %>

    <% #################################################################################################### %>
    <%= render "@shared/forms/section_heading", text: "Security" %>

    <div class="col-12 col-md-6">
      <%= f.input :roles, collection: user_roles_for_select, as: :check_boxes, wrapper_class: "inline"  %>
      <%= tag.div f.input(:api_access, label: "Enable API Access", required: false), class: "mt-3" %>
    </div>

    <%= pseudo_row_divider %>

    <%= render "@shared/forms/button_panel" do %>
      <%= f.button(:submit, class: "btn-lg btn-primary") %>
    <% end %>
  </div>
<% end %>
