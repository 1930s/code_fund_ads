<%= simple_form_for user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :paypal_email %>
  <%= f.input :address_1 %>
  <%= f.input :address_2 %>
  <%= f.input :city %>
  <%= f.input :region %>
  <%= f.input :country %>
  <%= f.input :postal_code %>
  <%= f.input :company %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
