<%= tag.tr class: classes("even": user_counter.even?, "odd": user_counter.odd?) do %>
  <td class="align-middle">
    <div class="media align-items-center">
      <span class="u-sm-avatar mr-2">
        <%= image_tag user.gravatar_url, class: "img-fluid rounded-circle", alt: user.full_name %>
      </span>
      <span><%= link_to user.full_name, user_path(user), title: "View User", data: tooltip_expando %></span>
    </div>
  </td>
  <td class="align-middle"><%= link_to user.email, "mailto:#{user.email}", title: "Email User", data: tooltip_expando %></td>
  <td class="align-middle"><%= user.company_name %></td>
  <td class="align-middle">
    <% user.roles.each do |role| %>
      <span class="badge badge-light"><%= role %></span>
    <% end %>
  </td>
  <td class="align-middle text-secondary">
    <%= link_to edit_user_path(user), class: "btn btn-xs btn-icon btn-soft-secondary transition-3d-hover", title: "Edit User", data: tooltip_expando do %>
      <span class="fas fa-pen btn-icon__inner"></span>
    <% end %>
    <%= link_to images_path(user.to_gid_param), class: "btn btn-xs btn-icon btn-soft-secondary transition-3d-hover", title: "Manage Images", data: tooltip_expando do %>
      <span class="fas fa-images btn-icon__inner"></span>
    <% end if user.sponsor? %>
  </td>
<% end %>
