<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/users", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_user" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Users",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "user-circle" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render "/user_searches/form" %>
    <div class="card">
      <div class="card-body">
        <%= render "/users/table" %>
      </div>
    </div>
  </div>
</main>