<%= render layout: "/campaigns/show_layout", locals: { campaign: @campaign } do %>
  <h3 class="h5 mb-3">
    Overview
    <small class="text-muted d-block">A mini-dashboard specifically for this campaign</small>
  </h3>

  <div class="card-deck d-block d-lg-flex card-lg-gutters-3 mb-3">
    <%= render "/@shared/widgets/stat_card",
      label: "Impressions",
      value: @campaign.impressions.count %>
    <%= render "/@shared/widgets/stat_card",
      label: "Clicks",
      value: @campaign.impressions.clicked.count %>
    <%= render "/@shared/widgets/stat_card",
      label: "CTR",
      value: "TBD%" %> <%# TODO: Nate - Average CTR for campaign (start_date to end_date) %>
    <%= render "/@shared/widgets/stat_card",
      label: "CPC",
      value: "$TBD" %> <%# TODO: Nate - Average calculated CPC campaign (start_date to end_date) %>
  </div>
  <div class="card-deck d-block d-lg-flex card-lg-gutters-3 mb-3">
    <%= render "/@shared/widgets/stat_card",
      label: "Total Budget",
      value: number_to_currency(@campaign.total_budget) %>
    <%= render "/@shared/widgets/stat_card",
      label: "Remaining Days",
      value: @campaign.remaining_operative_days %>
    <%= render "/@shared/widgets/stat_card",
      label: "Total Spend",
      value: "TBD" %> <%# TODO: Nate - Total consumed budget for campaign (start_date to end_date) %>
    <%= render "/@shared/widgets/stat_card",
      label: "Remaining Budget",
      value: number_to_currency(@campaign.total_remaining_budget) %>
  </div>
<% end %>