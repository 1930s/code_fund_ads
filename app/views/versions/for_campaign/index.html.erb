<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/campaigns" %>
  <%= render "/@shared/breadcrumbs/campaign", campaign: @versionable, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/edit_campaign", campaign: @versionable %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Campaign",
    subtitle: @versionable.name,
    icon: "fas fa-ad" %>
<% end %>

<%= render layout: "/campaigns/show_layout", locals: { campaign: @versionable } do %>
  <%= render "/versions/table", versionable: @versionable %>
<% end %>
