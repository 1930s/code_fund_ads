<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/campaigns" %>
  <%= render "/@shared/breadcrumbs/campaign", campaign: @commentable, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/edit_campaign", campaign: @commentable %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Campaign",
    subtitle: @commentable.name,
    icon: "fas fa-ad" %>
<% end %>

<%= render layout: "/campaigns/show_layout", locals: { campaign: @commentable } do %>
  <%= render "/comments/table", commentable: @commentable, comments: @comments %>
<% end %>
