<style type="text/css">
  body,
  html, 
  .body {
    background: #f3f3f3 !important;
  }
</style>
<!-- move the above styles into your custom stylesheet -->

<spacer size="16"></spacer>

<container>
  <spacer size="16"></spacer>
  <row>
    <columns>
      <h3>Publisher Submission</h3>
      <spacer size="16"></spacer>
      <row>
        <columns large="6">
          <p>
            <strong>Name</strong><br/>
            <%= @name %>
          </p>
          <p>
            <strong>Email Address</strong><br/>
            <%= mail_to @form[:email] %>
          </p>
        </columns>
        <columns large="6">
          <p>
            <strong>Website</strong><br/>
            <%= link_to @form[:website_url], @form[:website_url] %>
          </p>
          <p>
            <strong>Monthly Visitors</strong><br/>
            <%= @form[:monthly_visitors] %>
          </p>
        </columns>
      </row>
    </columns>
  </row>
</container>