<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/organizations" %>
  <%= render "/@shared/breadcrumbs/organization", organization: @organization %>
  <%= render "/@shared/breadcrumbs/organization_transactions", organization: @organization, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_organization_transaction", organization: @organization %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading @organization.name, "Transactions",
    subtitle: "#{pluralize(@pagy.count, "record")} found",
    icon: "fas fa-file-invoice-dollar" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <div class="bg-white p-4">
      <%= render "/organization_transactions/table", organization: @organization, organization_transactions: @organization_transactions, pagy: @pagy %>
    </div>
  </div>
</main>