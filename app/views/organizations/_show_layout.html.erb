<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/organizations" %>
  <%= render "/@shared/breadcrumbs/organization", organization: organization, class: "active" %>
<% end %>

<% content_for :actions do %>

  <ul class="nav" style="width: 130px; justify-content: flex-end;">
    <li><%= render "/@shared/actions/edit_organization", organization: organization %></li>
    <li class="ml-1"><%= render "/@shared/actions/list_organization_transactions", organization: organization %></li>
  </ul>
  
<% end %>

<% content_for :page_heading do %>
  <%= page_heading organization.name, "",
    icon: "fas fa-building" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <div class="bg-white border p-4">
      <%= yield %>
    </div>
  </div>
</main>