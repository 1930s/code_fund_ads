<%= tag.tr class: classes("even": image_counter.even?, "odd": image_counter.odd?) do %>
  <td><%= link_to truncate(image.blob.filename.to_s, length: 20), edit_image_path(@imageable.to_gid_param, image), title: "Edit Image", data: tooltip_expando %></td>
  <td><%= truncate image.metadata["name"].to_s, length: 20 %></td>
  <td><%= tag.span image.metadata["format"], class: "badge badge-light" %></td>
  <td><%= image.blob.content_type %></td>
  <td><%= link_to image_tag(image.variant(thumbnail: "x50"), style: "height:50px", class: "img-thumbnail", title: "View Original", data: tooltip_expando), image %></td>
<% end %>
