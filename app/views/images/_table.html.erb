<table class="table table-borderless u-datatable u-datatable__striped mt-5">
  <thead>
    <tr class="border-bottom">
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>
    <%# render partial: "/images/tr", collection: @imageable.images, as: :image %>
  </tbody>
  <tfoot>
    <tr class="border-top">
      <td colspan="5" class="pt-3">
        <%# link_to "Previous", images_path(page: @pagy.prev), class: "btn btn-lg btn-link text-secondary" if @pagy.prev %>
        <%# link_to "Next", images_path(page: @pagy.next), class: "btn btn-lg btn-link text-secondary float-right" if @pagy.next %>
      </td>
    </tr>
  </tfoot>
</table>
