<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/imageables" %>
  <%= render "/@shared/breadcrumbs/imageable" %>
  <%= render "/@shared/breadcrumbs/images", class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/add_images" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Images",
    subtitle: "for #{@imageable.imageable_name}",
    icon: "images" %>
<% end %>

<main id="content" role="main" class="bg-light">
  <div class="container space-1">
    <%= render partial: "/image_searches/form",
              layout: "/@shared/collapsable_search_form",
              locals: { search: @image_search } %>
    <div class="bg-white p-4">
      <%= render "/images/table" %>
    </div>
  </div>
</main>