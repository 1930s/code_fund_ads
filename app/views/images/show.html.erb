<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/imageables" %>
  <%= render "/@shared/breadcrumbs/imageable" %>
  <%= render "/@shared/breadcrumbs/images" %>
  <%= render "/@shared/breadcrumbs/image", class: "active" %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Image",
    subtitle: "for #{@imageable.imageable_name}",
    icon: "image" %>
<% end %>

<main id="content" role="main">
  <div class="u-bg-light-blue-50">
    <div class="container u-space-1">
      <p id="notice"><%= notice %></p>

      <div class="row">
        <div class="col-12">
          <%= image_tag @image.variant(geometry: "600x600"), class: "img-thumbnail d-block mt-5" %>
        </div>

        <% #################################################################################################### %>
        <%= render "@shared/forms/section_heading", text: "Info" %>

        <div class="col-12">
          <b>Filename</b>
          <%= @image.blob.filename %>
        </div>
        <div class="col-12">
          <b>Type</b>
          <%= @image.blob.content_type %>
        </div>
        <div class="col-12">
          <b>Size</b>
          <%= number_to_human_size @image.blob.byte_size %>
        </div>
        <div class="col-12">
          <b>Linked Campaigns</b>
          ???
        </div>

        <%= render "@shared/forms/button_panel" do %>
          <%= link_to 'Delete', image_path(@imageable.to_gid_param, @image), class: "btn btn-danger btn-lg", method: :delete,
            data: { confirm: "Are you sure you want to delete this image?" } %>
        <% end %>
      </div>

      <%= link_to 'Back', :back, class: "btn btn-link" %>
    </div>
  </div>
</div>
