<%= simple_form_for @property_search do |f| %>
  <div class="row mt-5">
    <%= tag.div f.input(:name, required: false), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:user, label: "Developer", required: false), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:property_types, collection: property_types_for_select, required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:statuses, collection: property_statuses_for_select, required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:templates, collection: templates_for_select, required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:languages, collection: languages_for_select, required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:topic_categories, collection: topic_categories_for_select, label: "Topics", required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>
    <%= tag.div f.input(:programming_languages, collection: programming_languages_for_select, required: false, input_html: { multiple: true, data: { controller: "select" }}), class: "col-12 col-md-auto" %>

    <%= pseudo_row_divider %>

    <div class="col-12 mt-3">
      <%= f.button :submit, value: "Search", class: "btn btn-default mr-3" %>
      <%= link_to "Clear", property_search_path(@property_search.to_gid_param), class: "btn-md btn-link text-danger", method: :delete if @property_search.present? %>
    </div>
  </div>
<% end %>
