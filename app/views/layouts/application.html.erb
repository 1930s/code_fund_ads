<!DOCTYPE html>
<html>
  <head>
    <title>CodeFund Ads</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Favicon -->
    <link rel="shortcut icon" href="https://codefund.io/favicon.ico">

    <!-- Search Engine -->
    <meta name="description" content="CodeFund is an open source ad platform that funds developers through ethical advertising.">
    <meta name="image" content="<%= asset_url "codefund-logo-square-512.png" %>"/>

    <!-- Schema.org for Google -->
    <meta itemprop="name" content="CodeFund">
    <meta itemprop="description" content="CodeFund is an open source ad platform that funds developers through ethical advertising.">
    <meta itemprop="image" content="<%= asset_url "codefund-logo-square-512.png" %>">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="CodeFund">
    <meta name="twitter:description" content="CodeFund is an open source ad platform that funds developers through ethical advertising.">
    <meta name="twitter:site" content="@codefundio">
    <meta name="twitter:creator" content="@coderberry">
    <meta name="twitter:image:src" content="<%= asset_url "twitter-preview-image.png" %>">

    <!-- Open Graph general (Facebook, Pinterest & Google+) -->
    <meta name="og:title" content="CodeFund">
    <meta name="og:description" content="CodeFund is an open source ad platform that funds developers through ethical advertising.">
    <meta name="og:image" content="<%= asset_url "preview-image.png" %>">
    <meta name="og:url" content="<%= root_url %>">
    <meta name="og:site_name" content="CodeFund">
    <meta name="og:locale" content="en_US">
    <meta name="fb:admins" content="801507563">
    <meta name="og:type" content="website">

    <!-- CDN Stylesheets -->
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Poppins:300,400,500,600">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-POYwD7xcktv3gUeZO5s/9nUbRJG/WOmV6jfEGikMJu77LGYO8Rfs2X7URG822aum" crossorigin="anonymous">

    <!-- Compressed Stylesheets -->
    <%= stylesheet_pack_tag 'main', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- Compressed JavaScripts -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'main', 'data-turbolinks-track': 'reload' %>

    <!-- Cookie / Privacy Policy -->
    <script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src="https://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);</script>
  </head>
  <body>
    <%= render "/@shared/skippy" %>
    <%= render "/@shared/header" %>

    <% if content_for?(:breadcrumbs) %>
      <div class="bg-primary">
        <div class="container pt-4 pb-4">
          <div class="row">
            <div class="col-lg-5 order-lg-2 text-lg-right mb-4 mb-lg-0">
              <div class="d-flex d-lg-inline-block justify-content-between justify-content-lg-end align-items-center align-items-lg-start">
                <ol class="breadcrumb breadcrumb-white breadcrumb-no-gutter mb-0">
                  <%= yield :breadcrumbs %>
                </ol>
              </div>

              <% if content_for?(:actions) %>
                <div class="ml-lg-auto mt-4">
                  <%= yield :actions %>
                </div>
              <% end %>
            </div>

            <div class="col-lg-7 order-lg-1">
              <%= yield :page_heading %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>
    <%= render "/@shared/footer" %>

    <%= support_widget_tag %>
    <%= ga_tag %>
  </body>
</html>
