<% content_for :breadcrumbs do %>
  <%= render "/@shared/breadcrumbs/dashboard" %>
  <%= render "/@shared/breadcrumbs/campaigns" %>
  <%= render "/@shared/breadcrumbs/campaign", campaign: @campaign, class: "active" %>
<% end %>

<% content_for :actions do %>
  <%= render "/@shared/actions/edit_campaign", campaign: @campaign %>
<% end %>

<% content_for :page_heading do %>
  <%= page_heading "Viewing", "Campaign",
    subtitle: @campaign.name,
    icon: "fas fa-ad" %>
<% end %>

<%= render layout: "/campaigns/show_layout", locals: { campaign: @campaign } do %>
  <div class="row">
    <div class="col-md-6">
      <h3 class="h5">Keywords</h3>
      <% @campaign.keywords.each do |keyword| %>
        <span class="btn btn-xs btn-soft-primary mb-2"><%= keyword %></span>
      <% end %>
      <% @campaign.negative_keywords.each do |keyword| %>
        <span class="btn btn-xs btn-soft-dark mb-2"><%= keyword %></span>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3 class="h5">Countries</h3>
      <% @campaign.countries.each do |country| %>
        <span class="btn btn-xs btn-soft-success mb-2"><%= country %></span>
      <% end %>
    </div>
  </div>
<% end %>